<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_task_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edit_text_task_title"
            android:hint="@string/edit_task_edit_text_hint_task_title"
            android:textColorHint="@color/colorTextHigh"
            android:background="@null"
            android:textColor="@color/colorTextHigh"
            android:inputType="text"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/edit_text_task_description"
            android:hint="@string/edit_task_edit_text_hint_task_description"
            android:textColorHint="@color/colorTextMedium"
            android:background="@null"
            android:textColor="@color/colorTextMedium"
            android:textSize="17sp"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</ScrollView>